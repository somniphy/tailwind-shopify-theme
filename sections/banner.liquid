{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Welcome to Our Store" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Discover our curated collection." },
    { "type": "image_picker", "id": "background_image", "label": "Background Image" }
  ]
}
{% endschema %}

<section 
  class="relative bg-gray-900 text-white py-24 px-6 text-center"
  style="background-image: url('{{ section.settings.background_image | img_url: '1600x' }}'); background-size: cover; background-position: center;"
>
  <div class="bg-black/50 p-8 rounded-lg inline-block">
    <h1 class="text-4xl font-bold mb-4">{{ section.settings.heading }}</h1>
    <p class="text-lg opacity-90">{{ section.settings.subheading }}</p>
  </div>
</section>

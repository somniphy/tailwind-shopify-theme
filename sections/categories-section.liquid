<section class="py-16 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-serif">{{ section.settings.heading }}</h2>
      <p class="mt-2 text-gray-600">{{ section.settings.subheading }}</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="group relative overflow-hidden rounded-lg shadow hover:shadow-lg transition">
          <img
            src="{{ block.settings.image | file_url }}"
            alt="{{ block.settings.title }}"
            class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
          >
          <div class="absolute inset-0 bg-black bg-opacity-30 group-hover:bg-opacity-50 transition"></div>
          <div class="absolute bottom-4 left-4 text-white">
            <h3 class="text-lg font-semibold">{{ block.settings.title }}</h3>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Category Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore our curated selection."
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Dining Chairs"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link",
          "default": ""
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Category Grid",
      "category": "Custom",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}

{% schema %}
{
  "name": "Featured Products (Tailwind)",
  "settings": [
    { "type": "collection", "id": "collection", "label": "Select Collection" }
  ]
}
{% endschema %}

{% assign collection = collections[section.settings.collection] %}
{% if collection %}
<section class="py-16 bg-secondary">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-primary mb-8">{{ collection.title }}</h2>
    <div class="grid gap-6 md:grid-cols-3">
      {% for product in collection.products limit:6 %}
      <a href="{{ product.url }}" class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">
        <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}" class="w-full h-64 object-cover">
        <div class="p-4">
          <h3 class="font-semibold text-lg mb-2">{{ product.title }}</h3>
          <p class="text-primary font-bold">{{ product.price | money }}</p>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

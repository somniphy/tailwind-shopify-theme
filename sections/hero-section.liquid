<section
  class="relative bg-gray-50 min-h-[80vh] flex items-center"
  style="background-image: url('{{ section.settings.background | file_url }}'); background-size: cover; background-position: center;"
>
  <div class="absolute inset-0 bg-black bg-opacity-40"></div>

  <div class="relative z-10 max-w-4xl mx-auto text-center px-6 text-white">
    <h1 class="text-4xl md:text-6xl font-serif mb-4">{{ section.settings.heading }}</h1>
    <p class="text-lg md:text-xl mb-8">{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="inline-block bg-white text-black px-6 py-3 rounded-lg font-medium hover:bg-gray-200 transition">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Elevate Your Space"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Minimalist chairs designed for timeless comfort."
    },
    {
      "type": "image_picker",
      "id": "background",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

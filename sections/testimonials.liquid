<section class="py-20 px-6 bg-gray-50">
  <div class="max-w-5xl mx-auto text-center">
    <h2 class="text-3xl font-serif mb-12">{{ section.settings.heading }}</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="bg-white p-6 rounded-xl shadow-sm">
          <p class="text-gray-700 mb-4">"{{ block.settings.quote }}"</p>
          <h4 class="font-semibold">{{ block.settings.name }}</h4>
          <span class="text-sm text-gray-500">{{ block.settings.role }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "The Riviera chair transformed my living room into a minimalist haven."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Jane Doe"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Role/Location",
          "default": "Interior Designer"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Testimonials",
      "category": "Custom",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}

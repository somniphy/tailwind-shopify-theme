{% schema %}
{
  "name": "Testimonial (Tailwind)",
  "settings": [
    { "type": "text", "id": "quote", "label": "Quote", "default": "This store is amazing! I love the quality of the products." },
    { "type": "text", "id": "author", "label": "Author", "default": "Jane Doe" }
  ]
}
{% endschema %}

<section class="bg-accent text-white py-16">
  <div class="max-w-3xl mx-auto px-6 text-center">
    <blockquote class="text-2xl font-light leading-relaxed mb-6">
      “{{ section.settings.quote }}”
    </blockquote>
    <p class="font-semibold">— {{ section.settings.author }}</p>
  </div>
</section>
